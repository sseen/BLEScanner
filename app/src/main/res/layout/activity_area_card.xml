<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/idDeviceUser"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".ui.areaCard.AreaCardActivity">

    <TextView
        android:id="@+id/idTVDeviceUser"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp"
        android:textAlignment="center"
        android:text="@string/beacon_device_user" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/idRVArea"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="2"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:padding="10dp"
        android:showDividers="middle"
        android:divider="@drawable/divider"
        android:layout_height="80dp">
        <com.google.android.material.button.MaterialButton
            android:id="@+id/idBt_DataCollect_finish"
            android:layout_width="match_parent"
            android:text="@string/button_finish"
            app:cornerRadius="10dp"
            android:textSize="18dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/idBt_DataCollect_save"
            android:layout_width="match_parent"
            android:text="@string/button_save"
            android:enabled="false"
            app:cornerRadius="10dp"
            android:textSize="18dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            />

    </LinearLayout>
</LinearLayout>